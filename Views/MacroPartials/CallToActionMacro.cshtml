@inherits Umbraco.Cms.Web.Common.Macros.PartialViewMacroPage
@{
    var ctaTitle = Model.MacroParameters["ctaTitle"] as string;
    var ctaText = Model.MacroParameters["ctaText"] as string;
    var ctaLinkUdi = Model.MacroParameters["ctaLink"];
    var linkContent = Umbraco.Content(ctaLinkUdi);
}

<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col text-center py-5">
                <h1 clsas="display-4">@ctaTitle</h1>
                <p class="lead">@ctaText</p>
                @{
                    if (linkContent != null)
                    {
                        <a href="@linkContent.Url()" class="btn btn-outline-secondary">@linkContent.Name</a>
                    }
                }
            </div>
        </div>
    </div>
</section>