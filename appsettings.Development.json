{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "umbracoDbDSN": "server=localhost;database=UmbracoDemo;user id=UmbracoDemo;password=test;TrustServerCertificate=True",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.SqlClient"
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "82ceadf9-f21a-4559-baec-556b6c0dbc56",
        "SanitizeTinyMce": true,
        "Smtp": {
          "From": "noreply@umbraco.com",
          "Host": "localhost",
          "Port": "25",
          "Username": "noreply@umbraco.com",
          "Password": "1234" // you can keep your secrets in Umbraco Cloud Secrets Manager
          // "Password": "UMBRACO__CMS__GLOBAL__SMTP__PASSWORD" when using from secrets manager
        }
      },
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      },
      "RuntimeMinification": {
        "UseInMemoryCache": true,
        "CacheBuster": "Timestamp"
      }
    }
  }
}
